<section class="product-bundle-section">
  <div class="content-container">
    {% if section.settings.section_title != blank %}
      <h2 class="section-title">{{ section.settings.section_title }}</h2>
    {% endif %}

    <div class="products-grid">
      {% for block in section.blocks %}
        {% if block.type == 'product_card' and block.settings.card_size == 'large' %}
          <div class="product-card product-card--large" {{ block.shopify_attributes }}>
            {% if block.settings.product_url != blank %}
              <a href="{{ block.settings.product_url }}" class="product-card__link">
            {% endif %}

            <div class="product-card__image-wrapper">
              {% if block.settings.product_image %}
                {{
                  block.settings.product_image
                  | image_url: width: 800
                  | image_tag: class: 'product-card__image', loading: 'lazy', alt: block.settings.product_title
                }}
              {% else %}
                <div class="product-card__placeholder">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="product-card__content">
              <div class="product-card__header">
                <h3 class="product-card__title">{{ block.settings.product_title }}</h3>

                {% if block.settings.show_rating %}
                  <div class="product-card__rating">
                    <div class="star-rating">
                      {% assign rating = block.settings.rating_value %}
                      {% assign full_stars = rating | floor %}

                      {% for i in (1..full_stars) %}
                        <span class="star star--full">★</span>
                      {% endfor %}

                      {% assign decimal_part = rating | modulo: 1 %}
                      {% if decimal_part >= 0.5 %}
                        <span class="star star--half">
                          <span class="star-half-inner">★</span>
                          <span class="star-empty-bg">★</span>
                        </span>
                      {% endif %}

                      {% assign total_filled = full_stars %}
                      {% if decimal_part >= 0.5 %}
                        {% assign total_filled = total_filled | plus: 1 %}
                      {% endif %}
                      {% assign empty_stars = 5 | minus: total_filled %}

                      {% for i in (1..empty_stars) %}
                        <span class="star star--empty">★</span>
                      {% endfor %}
                    </div>
                  </div>
                {% endif %}
              </div>

              <div class="product-card__footer">
                {% if block.settings.product_description != blank %}
                  <p class="product-card__description">{{ block.settings.product_description }}</p>
                {% endif %}

                {% if block.settings.product_price != blank %}
                  <div class="product-card__price">
                    <span class="price">{{ block.settings.product_price }}</span>
                  </div>
                {% endif %}
              </div>
            </div>

            {% if block.settings.product_url != blank %}
              </a>
            {% endif %}
          </div>
          {% break %}
        {% endif %}
      {% endfor %}

      <div class="products-grid-right">
        {% for block in section.blocks %}
          {% if block.type == 'product_card' and block.settings.card_size != 'large' %}
            <div class="product-card" {{ block.shopify_attributes }}>
              {% if block.settings.product_url != blank %}
                <a href="{{ block.settings.product_url }}" class="product-card__link">
              {% endif %}

              <div class="product-card__image-wrapper">
                {% if block.settings.product_image %}
                  {{
                    block.settings.product_image
                    | image_url: width: 400
                    | image_tag: class: 'product-card__image', loading: 'lazy', alt: block.settings.product_title
                  }}
                {% else %}
                  <div class="product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="product-card__content">
                <div class="product-card__header">
                  <h3 class="product-card__title">{{ block.settings.product_title }}</h3>

                  {% if block.settings.show_rating %}
                    <div class="product-card__rating">
                      <div class="star-rating">
                        {% assign rating = block.settings.rating_value %}
                        {% assign full_stars = rating | floor %}

                        {% for i in (1..full_stars) %}
                          <span class="star star--full">★</span>
                        {% endfor %}

                        {% assign decimal_part = rating | modulo: 1 %}
                        {% if decimal_part >= 0.5 %}
                          <span class="star star--half">
                            <span class="star-half-inner">★</span>
                            <span class="star-empty-bg">★</span>
                          </span>
                        {% endif %}

                        {% assign total_filled = full_stars %}
                        {% if decimal_part >= 0.5 %}
                          {% assign total_filled = total_filled | plus: 1 %}
                        {% endif %}
                        {% assign empty_stars = 5 | minus: total_filled %}

                        {% for i in (1..empty_stars) %}
                          <span class="star star--empty">★</span>
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}
                </div>

                <div class="product-card__footer">
                  {% if block.settings.product_description != blank %}
                    <p class="product-card__description">{{ block.settings.product_description }}</p>
                  {% endif %}

                  {% if block.settings.product_price != blank %}
                    <div class="product-card__price">
                      <span class="price">{{ block.settings.product_price }}</span>
                    </div>
                  {% endif %}
                </div>
              </div>

              {% if block.settings.product_url != blank %}
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% style %}
  .product-bundle-section {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
    background: linear-gradient(180deg, {{ section.settings.bg_gradient_start }} 0%, {{ section.settings.bg_gradient_end }} 100%);
  }

  .content-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .section-title {
    font-family: 'True North Black', 'Arial Black', Impact, sans-serif;
    font-weight: 900;
    font-size: 72px;
    line-height: 90%;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    color: {{ section.settings.title_color }};
    text-align: center;
    margin: 0;
  }

  .products-grid {
    display: flex;
    gap: 16px;
    width: 100%;
  }

  .product-card--large {
    width: 592px;
    height: 789px;
    flex-shrink: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: {{ section.settings.card_bg_color }};
    box-shadow: 0px 8px 20px rgba(75, 10, 6, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .products-grid-right {
    display: grid;
    grid-template-columns: 285px 285px;
    grid-template-rows: 386.5px 386.5px;
    gap: 16px;
  }

  .products-grid-right .product-card {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: {{ section.settings.card_bg_color }};
    box-shadow: 0px 8px 20px rgba(75, 10, 6, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .product-card:hover,
  .product-card--large:hover {
    transform: translateY(-4px);
    box-shadow: 0px 12px 28px rgba(75, 10, 6, 0.15);
  }

  .product-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    background: {{ section.settings.image_bg_color }};
    overflow: hidden;
  }

  .products-grid-right .product-card__image-wrapper {
    height: 250px;
    flex-shrink: 0;
  }

  .product-card--large .product-card__image-wrapper {
    height: 667px;
    flex-shrink: 0;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card__content {
    display: flex;
    flex-direction: column;
    padding: 16px;
    gap: 8px;
    background: {{ section.settings.content_bg_color }};
    flex: 1;
  }

  .product-card--large .product-card__content {
    padding: 16px 16px 24px;
    flex: 0 0 122px;
    height: 122px;
  }

  .product-card__header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 8px;
  }

  .product-card__title {
    font-family: 'True North Black', 'Arial Black', Impact, sans-serif;
    font-weight: 900;
    font-size: 20px;
    line-height: 100%;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: {{ section.settings.title_color }};
    margin: 0;
  }

  .product-card__rating {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .star-rating {
    display: flex;
    gap: 5.31px;
  }

  .star {
    width: 18.49px;
    height: 18.49px;
    color: #FFC633;
    font-size: 18.49px;
    line-height: 1;
  }

  .star--full {
    color: #FFC633;
  }

  .star--empty {
    color: #FFC633;
    opacity: 0.25;
  }

  .star--half {
    position: relative;
    color: #FFC633;
  }

  .star-half-inner {
    position: absolute;
    left: 0;
    top: 0;
    width: 50%;
    overflow: hidden;
  }

  .star-empty-bg {
    color: #FFC633;
    opacity: 0.25;
  }

  .product-card__footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 8px;
    margin-top: auto;
  }

  .product-card__description {
    font-family: 'Open Sauce Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 150%;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .product-card__price {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .price {
    font-family: 'Open Sauce Sans', sans-serif;
    font-weight: 900;
    font-size: 24px;
    line-height: 32px;
    color: {{ section.settings.title_color }};
  }

  @media screen and (max-width: 1200px) {
    .products-grid {
      flex-direction: column;
      align-items: center;
    }

    .product-card--large {
      width: 100%;
      max-width: 600px;
    }

    .products-grid-right {
      grid-template-columns: repeat(2, 1fr);
      width: 100%;
      max-width: 600px;
    }
  }

  @media screen and (max-width: 768px) {
    .section-title {
      font-size: 42px;
    }

    .products-grid-right {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

