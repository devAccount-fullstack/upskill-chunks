{% style %}
  .product-bundle-section {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
    background: linear-gradient(180deg, {{ section.settings.bg_gradient_start }} 0%, {{ section.settings.bg_gradient_end }} 100%);
  }

  .content-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .section-title {
    font-family: 'True North Black', 'Arial Black', Impact, sans-serif;
    font-weight: 900;
    font-size: 72px;
    line-height: 90%;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    color: {{ section.settings.title_color }};
    text-align: center;
    margin: 0;
  }

  .products-grid {
    display: flex;
    gap: 16px;
    width: 100%;
  }
  .product-card {
    cursor: pointer;
  }

  .product-card--large {
    width: 592px;
    height: 789px;
    flex-shrink: 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: {{ section.settings.card_bg_color }};
    box-shadow: 0px 8px 20px rgba(75, 10, 6, 0.1);
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .products-grid-right {
    display: grid;
    grid-template-columns: 285px 285px;
    grid-template-rows: 386.5px 386.5px;
    gap: 16px;
  }

  .products-grid-right .product-card {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: {{ section.settings.card_bg_color }};
    box-shadow: 0px 8px 20px rgba(75, 10, 6, 0.1);
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-card:hover,
  .product-card--large:hover {
    transform: translateY(-4px);
    box-shadow: 0px 12px 28px rgba(75, 10, 6, 0.15);
  }

  .product-card__link {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    width: 100%;
    background: {{ section.settings.image_bg_color }};
    overflow: hidden;
    flex-shrink: 0;
  }

  .products-grid-right .product-card__image-wrapper {
    height: calc(100% - 60px);
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card--large .product-card__image-wrapper {
    height: calc(100% - 60px);
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .products-grid-right .product-card:hover .product-card__image-wrapper {
    height: calc(100% - 235px);
  }

  .product-card--large:hover .product-card__image-wrapper {
    height: calc(100% - 130px);
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .product-card:hover .product-card__image,
  .product-card--large:hover .product-card__image {
    transform: scale(1.05);
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card__content {
    position: relative;
    width: 100%;
    height: 60px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    gap: 12px;
    background: {{ section.settings.content_bg_color }};
    flex-shrink: 0;
    overflow: visible;
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 10;
  }

  .content-wave {
    position: absolute;
    top: -16px;
    left: 0;
    width: 100%;
    height: 16px;
    z-index: 1;
    overflow: visible;
  }

  .content-wave svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .product-card--large .content-wave {
    top: -20px;
    height: 20px;
  }

  .products-grid-right .product-card:hover .product-card__content {
    height: 235px;
  }

  .product-card--large .product-card__content {
    height: 60px;
    padding: 16px 16px 24px;
  }

  .product-card--large:hover .product-card__content {
    height: 130px;
  }

  .product-card__header {
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex-shrink: 0;
  }

  .product-card--large .product-card__header {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    gap: 8px;
  }

  .product-card__title {
    font-family: 'True North Black', 'Arial Black', Impact, sans-serif;
    font-weight: 900;
    font-size: 20px;
    line-height: 100%;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: {{ section.settings.title_color }};
    margin: 0;
    margin-top: -8px;
  }

  .product-card--large .product-card__title {
    flex: 1;
  }

  .product-card:hover .product-card__title,
  .product-card--large:hover .product-card__title {
    text-decoration: underline;
  }

  .product-card__rating {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.3s ease 0.1s, transform 0.3s ease 0.1s;
    flex-shrink: 0;
  }

  .product-card:hover .product-card__rating,
  .product-card--large:hover .product-card__rating {
    opacity: 1;
    transform: translateY(0);
  }

  .star-rating {
    display: flex;
    gap: 5.31px;
  }

  .star {
    width: 18.49px;
    height: 18.49px;
    color: #FFC633;
    font-size: 18.49px;
    line-height: 1;
  }

  .star--full {
    color: #FFC633;
  }

  .star--empty {
    color: #FFC633;
    opacity: 0.25;
  }

  .star--half {
    position: relative;
    color: #FFC633;
  }

  .star-half-inner {
    position: absolute;
    left: 0;
    top: 0;
    width: 50%;
    overflow: hidden;
  }

  .star-empty-bg {
    color: #FFC633;
    opacity: 0.25;
  }

  .product-card__footer {
    display: flex;
    flex-direction: column;
    gap: 12px;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.3s ease 0.2s, transform 0.3s ease 0.2s;
  }

  .product-card--large .product-card__footer {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    gap: 8px;
  }

  .product-card:hover .product-card__footer,
  .product-card--large:hover .product-card__footer {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card__description {
    font-family: 'Open Sauce Sans', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 150%;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .product-card--large .product-card__description {
    flex: 1;
  }

  .product-card__price {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .price {
    font-family: 'Open Sauce Sans', sans-serif;
    font-weight: 900;
    font-size: 24px;
    line-height: 32px;
    color: {{ section.settings.title_color }};
  }

  @media screen and (max-width: 1200px) {
    .products-grid {
      flex-direction: column;
      align-items: center;
    }

    .product-card--large {
      width: 100%;
      max-width: 600px;
    }

    .products-grid-right {
      grid-template-columns: repeat(2, 1fr);
      width: 100%;
      max-width: 600px;
    }
  }

  @media screen and (max-width: 768px) {
    .section-title {
      font-size: 42px;
    }

    .products-grid-right {
      grid-template-columns: 1fr;
    }

    .product-card__content {
      height: auto !important;
    }

    .product-card__image-wrapper {
      height: 250px !important;
    }

    .product-card__rating,
    .product-card__footer {
      opacity: 1;
      transform: translateY(0);
    }

    .product-card--large .product-card__header,
    .product-card--large .product-card__footer {
      flex-direction: column;
      align-items: flex-start;
    }
  }
{% endstyle %}
