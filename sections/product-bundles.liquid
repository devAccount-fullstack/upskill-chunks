      <h2 class="section-title">{{ section.settings.section_title }}</h2>
    {% endif %}

    <div class="products-grid">
      {% for block in section.blocks %}
        {% if block.type == 'product_card' and block.settings.card_size == 'large' %}
          <div class="product-card product-card--large" {{ block.shopify_attributes }}>
            {% if block.settings.product_url != blank %}
              <a href="{{ block.settings.product_url }}" class="product-card__link">
            {% endif %}

            <div class="product-card__image-wrapper">
              {% if block.settings.product_image %}
                {{
                  block.settings.product_image
                  | image_url: width: 800
                  | image_tag: class: 'product-card__image', loading: 'lazy', alt: block.settings.product_title
                }}
