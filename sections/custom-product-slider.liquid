{% stylesheet %}
.custom-product-slider-section {
    background-color: #fde8e6;
    width: 100%;
}
.custom-product-slider {
    position: relative;
    padding: 128px 120px 140px 120px;
    gap: 64px;
    max-width: 1440px;
}

.product-slider-bg-heading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Arial', sans-serif;
    font-weight: 700;
    font-size: 70px;
    line-height: 90px;
    text-align: center;
    color: #FFFFFF;
}

.custom-product-slider-track {
}

.custom-product-slider-item-container{
    background: linear-gradient(109deg, rgba(254,210,215,1) 0%, rgba(234,67,53,1) 100%);
    width: min(520px, 74vw);
    aspect-ratio: 1 / 1;
    border-radius: 50%;
    z-index: 1;
    transform: translateY(-30%);
}

.custom-product-slider-container {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px;
    margin: 0 auto;
}

.custom-product-slider-item-content {
    position: absolute;
    top: 55%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    text-align: center;
    gap: 24px;
}

.custom-product-slider-item-content h2 {
    font-size: 40px;
    line-height: 90%;
    letter-spacing: -2%;
    text-transform: uppercase;
    color: #FEF3F3;
}

.custom-product-slider-item-content p {
    font-size: 18px;
    line-height: 140%;
    letter-spacing: 0%;
    font-weight: 500;
    color: #FEF3F3;
}

.custom-product-slider-link {
    padding: 14px 32px;
    gap: 10px;
    border: 1px solid #FEF3F3;
    border-radius: 50px;
    font-size: 14px;
    line-height: 100%;
    text-align: center;
    text-decoration: none;
    color: #9B3462;
    background-color: #FEF3F3;
    letter-spacing: -2%;
}

.custom-product-slider-item {
    z-index: 5;
}

.custom-product-scatter-image-left {
    position: absolute;
    top: 10%;
    left: 25%;
    z-index: 5;
}
.custom-product-scatter-image-right {
    position: absolute;
    top: 15%;
    right: 25%;
    z-index: 5;
}

.custom-product-slider-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  color: #9b3462;
  border: 0;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  cursor: pointer;
  z-index: 10;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  opacity: 1 !important;
  pointer-events: all !important;
  box-shadow: 0 6px 18px rgba(0,0,0,.08);
}


{% endstylesheet %}

