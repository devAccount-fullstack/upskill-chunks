<section 
  class="media-marquee" 
  style="background-color: {{ section.settings.bg_color }};"
>
  <div 
    class="marquee-title"
    style="
      font-size: {{ section.settings.title_font_size }}px;
      line-height: {{ section.settings.title_line_height }};
      letter-spacing: {{ section.settings.title_letter_spacing }}px;
      margin-top: {{ section.settings.title_margin_top }}px;
      margin-right: {{ section.settings.title_margin_right }}px;
      margin-bottom: {{ section.settings.title_margin_bottom }}px;
      margin-left: {{ section.settings.title_margin_left }}px;
      color: {{ section.settings.title_color }};
    "
  >
    {{ section.settings.heading }}
  </div>

  <div class="marquee">
    <div class="marquee-content">
      <div 
        class="marquee-content-logo" 
        style="gap: {{ section.settings.logo_gap }}px;"
      >
        {% for i in (1..section.settings.repeat) %}
          {% for block in section.blocks %}
            {% if block.settings.logo %}
              <img
                src="{{ block.settings.logo | image_url: width: block.settings.logo_width | default: 200 }}"
                alt="{{ block.settings.alt_text | escape }}"
                loading="lazy"
                style="width: {{ block.settings.logo_width }}px; height: {{ block.settings.logo_height }}px; object-fit: contain;"
                width = "" height = ""
              />
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
.media-marquee {
  text-align: center;
  padding: 3rem 0;
  overflow: hidden;
}

.marquee {
  position: relative;
  width: 100%;
  overflow: hidden;
  padding-top: 8px;
}

.marquee-title {
  text-transform: uppercase;
  font-family: "True North Black", sans-serif;
}

.marquee-content {
  display: flex;
  animation: marquee 50s linear infinite;
  align-items: center;
  width: max-content;
}

.marquee-content-logo {
  display: flex;
}

  .marquee-content-logo {
    display: flex;
    gap: 6rem;
  }

.marquee-content img {
  transition: opacity 0.3s ease;
  user-select: none;
  pointer-events: auto;
  opacity: 0.8;
}

  .marquee-content img {
    width: 100px;
    height: auto;
    object-fit: contain;
    transition: opacity 0.3s ease;
    user-select: none;
    pointer-events: auto;
    opacity: 0.8;
  }

  .marquee-content img:hover {
    opacity: 1;
    cursor: pointer;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0, 0, 0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "As Seen In Custom Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Custom Marquee Logo"
    },
    {
      "type": "number",
      "id": "repeat",
      "label": "Repeat Logos (for smooth scroll)",
      "default": 5
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FEF3F3"
    },
    {
      "type": "range",
      "id": "logo_gap",
      "label": "Gap Between Logos (px)",
      "default": 96,
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px"
    },

    /* ---------- TITLE STYLE CONTROLS ---------- */
    {
      "type": "header",
      "content": "Title Styling"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Font Size (px)",
      "default": 18,
      "min": 10,
      "max": 80,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "title_line_height",
      "label": "Line Height",
      "default": "1.2"
    },
    {
      "type": "range",
      "id": "title_letter_spacing",
      "label": "Letter Spacing (px)",
      "default": 0,
      "min": 0,
      "max": 10,
      "step": 0.1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_margin_top",
      "label": "Margin Top (px)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_margin_right",
      "label": "Margin Right (px)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_margin_bottom",
      "label": "Margin Bottom (px)",
      "default": 16,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_margin_left",
      "label": "Margin Left (px)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Text Color",
      "default": "#9B3462"
    },
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Media Logo"
        },
        {
          "type": "range",
          "id": "logo_width",
          "label": "Logo Width (px)",
          "default": 100,
          "min": 50,
          "max": 400,
          "step": 10,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "logo_height",
          "label": "Logo Height (px)",
          "default": 100,
          "min": 50,
          "max": 400,
          "step": 10,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "As Seen In",
      "category": "Custom",
      "blocks": [{ "type": "logo" }, { "type": "logo" }, { "type": "logo" }, { "type": "logo" }, { "type": "logo" }]
    }
  ]
}
{% endschema %}
