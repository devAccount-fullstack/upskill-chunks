<div class="custom-announcement-bar-section" role="region" aria-label="Announcement">
  <div class="custom-announcement-bar-wrapper">
    <div class="custom-announcement-track" aria-hidden="false">
      <div class="custom-announcement-group">
        {% for i in (1..section.settings.repeat) %}
          {% for block in section.blocks %}
            {% if block.type == 'custom_icon' and block.settings.logo %}
              <img
                src="{{ block.settings.logo | image_url }}"
                alt="{{ block.settings.logo.alt | escape }}"
                class="custom-announcement-bar-logo"
                height="30"
                width="30"
                loading="lazy"
              >
            {% endif %}
          {% endfor %}
          <h2 class="custom-announcement-bar-text">
            <span>{{ section.settings.text }}</span>
          </h2>
        {% endfor %}
      </div>

      <div class="custom-announcement-group" aria-hidden="true">
        {% for i in (1..section.settings.repeat) %}
          {% for block in section.blocks %}
            {% if block.type == 'custom_icon' and block.settings.logo %}
              <img
                src="{{ block.settings.logo | image_url }}"
                alt="{{ block.settings.logo.alt | escape }}"
                class="custom-announcement-bar-logo"
                height="30"
                width="30"
                loading="lazy"
              >
            {% endif %}
          {% endfor %}
          <h2 class="custom-announcement-bar-text">
            <span aria-hidden="true">{{ section.settings.text }}</span>
          </h2>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% stylesheet %}
  .custom-announcement-bar-section {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #fde8e6;
    background-color: #fcdcda;
    overflow: hidden;
    position: relative;
    height: 60px;
  }

  .custom-announcement-bar-wrapper {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .custom-announcement-track {
    display: flex;
    gap: 48px;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
    animation: marquee 30s linear infinite;
  }

  .custom-announcement-group {
    display: inline-flex;
    gap: 32px;
    align-items: center;
  }

  .custom-announcement-bar-logo {
    height: 30px;
    width: 30px;
    flex: 0 0 auto;
  }

  .custom-announcement-bar-text {
    font-family: 'Blogger Sans Medium';
    font-size: 18px;
    line-height: 90%;
    color: #9b3462;
    text-transform: uppercase;
    font-weight: bold;
    margin: 0;
    flex: 0 0 auto;
  }

  .custom-announcement-bar-section:hover .custom-announcement-track,
  .custom-announcement-bar-section:focus-within .custom-announcement-track {
    animation-play-state: paused;
  }
  @media (prefers-reduced-motion: reduce) {
    .custom-announcement-track {
      animation: none;
    }
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Custom Announcement",
  "tag": "header",
  "class": "custom-section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Sample Text"
    },
    {
      "type": "number",
      "id": "repeat",
      "label": "Repeater"
    }
  ],
  "blocks": [
    {
      "type": "custom_icon",
      "name": "Custom Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default Custom Announcement"
    }
  ]
}
{% endschema %}
