<section class="subscribe-section" style="margin: 0px {{ section.settings.section_margin | default: 150 }}px;">
  <div 
    class="subscribe-footer" 
    style="
      background-color: {{ section.settings.footer_bg | default: '#FFB1BB' }};
      padding: 5px 20px 20px 20px;
      border-radius: 20px;
    "
  >
    <p class="subscribe-text" style="
      font-size: {{ section.settings.title_font_size | default: 32 }}px;
      font-weight: bold;
      color: {{ section.settings.title_color | default: '#9B3462' }};
      font-family: {{ section.settings.title_font | default: 'True North Black, sans-serif' }};
      line-height: {{ section.settings.title_line_height | default: 90 }}%;
      letter-spacing: {{ section.settings.title_letter_spacing | default: -1 }}px;
    ">
      {{ section.settings.title_text }}
    </p>

    <form action="{{ section.settings.form_action_url }}" method="post" class="subscribe-form">
      <div class="input-wrapper">
        <span class="input-icon" style="color: {{ section.settings.icon_color | default: '#9B3462' }};">âœ‰</span>
        <input 
          type="email" 
          name="email" 
          placeholder="Enter your email address" 
          class="subscribe-input" 
          required 
          style="
            color: {{ section.settings.input_text_color | default: '#9B3462' }};
            font-size: {{ section.settings.input_font_size | default: 14 }}px;
          "
        >
      </div>
      <button 
        type="submit" 
        class="subscribe-btn" 
        style="
          background-color: {{ section.settings.button_bg | default: '#9B3462' }};
          color: {{ section.settings.button_text_color | default: 'white' }};
          font-size: {{ section.settings.button_font_size | default: 14 }}px;
        "
      >
        {{ section.settings.button_text }}
      </button>
    </form>
  </div>
</section>

{% stylesheet %}
.subscribe-section {
    margin: 0px 150px;
}

.subscribe-footer {
    background-color: #FFB1BB; 
    padding: 5px 20px 20px 20px;
    border-radius: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin: 30px 0;
    display: flex;
    justify-content: space-between; 
    align-items: center;
    width: 100%; 
}

.subscribe-text {
    font-size: 32px;
    font-weight: bold;
    color: #9B3462;
    margin-bottom: 15px;
    margin-left: 5%;
    justify-content: left;
    align-items: left;
    width: 550px;
    line-height: 90%;
    letter-spacing: -1px;
    font-family: "True North Black", sans-serif;
}

.subscribe-form {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-top: 10px;
    width: 38%;
    margin-right: 5%;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.input-icon {
  position: absolute;
  left: 18px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20px;
  color: #9b3462;
  pointer-events: none;
}

.subscribe-input {
  padding: 20px 20px 20px 45px;
  border: none;
  border-radius: 50px;
  width: 100%;
  font-size: 14px;
  outline: none;
  color: #9b3462;
}

.subscribe-input:focus {
    border-color: #6b1e58;
}

.subscribe-btn {
    padding: 20px 30px;
    margin-left: 20px;
    background-color: #9B3462;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 50px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.subscribe-input::placeholder {
    color: #9B3462;
}

.subscribe-btn:hover {
    background-color: #4c123d;
}
{% endstylesheet %}

