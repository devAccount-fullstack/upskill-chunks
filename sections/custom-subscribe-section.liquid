<section 
  class="subscribe-section"
  style="
    background-color: {{ section.settings.bg_color | default: '#FEF3F3' }};
    padding-top: {{ section.settings.padding_top | default: 40 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 40 }}px;
    padding-left: {{ section.settings.section_margin | default: 150 }}px;
    padding-right: {{ section.settings.section_margin | default: 150 }}px;
  "
>
  <div 
    class="subscribe-footer" 
    style="
      background-color: {{ section.settings.footer_bg | default: '#FFB1BB' }};
      padding: 5px 20px 20px 20px;
      border-radius: 20px;
      width: {{ section.settings.frame_width | default: 100 }}%;
      margin: 0 auto;
    "
  >
    <p class="subscribe-text" style="
      font-size: {{ section.settings.title_font_size | default: 32 }}px;
      font-weight: bold;
      color: {{ section.settings.title_color | default: '#9B3462' }};
      font-family: {{ section.settings.title_font | default: 'True North Black, sans-serif' }};
      line-height: {{ section.settings.title_line_height | default: 90 }}%;
      letter-spacing: {{ section.settings.title_letter_spacing | default: -1 }}px;
      width: {{ section.settings.title_width | default: 450 }}px;
      margin-left: 5%;
    ">
      {{ section.settings.title_text | default: 'STAY UP TO DATE ABOUT OUR LATEST OFFERS' }}
    </p>

    <form action="{{ section.settings.form_action_url | default: '/subscribe' }}" method="post" class="subscribe-form" style="width: {{ section.settings.form_width | default: 38 }}%;">
      <div class="input-wrapper" style="width: {{ section.settings.input_width | default: 100 }}%;">
        <span class="input-icon" style="color: {{ section.settings.icon_color | default: '#9B3462' }};">âœ‰</span>
        <input 
          type="email" 
          name="email" 
          placeholder="Enter your email address" 
          class="subscribe-input" 
          required 
          style="
            color: {{ section.settings.input_text_color | default: '#9B3462' }};
            font-size: {{ section.settings.input_font_size | default: 14 }}px;
          "
        >
      </div>
      <button 
        type="submit" 
        class="subscribe-btn" 
        style="
          background-color: {{ section.settings.button_bg | default: '#9B3462' }};
          color: {{ section.settings.button_text_color | default: 'white' }};
          font-size: {{ section.settings.button_font_size | default: 14 }}px;
          width: {{ section.settings.button_width | default: 25 }}%;
        "
      >
        {{ section.settings.button_text | default: 'SUBSCRIBE' }}
      </button>
    </form>
  </div>
</section>

{% stylesheet %}
.subscribe-section {
  padding: 0px 150px;
  background-color: #FEF3F3;
}

.subscribe-footer {
  background-color: #FFB1BB;
  padding: 5px 20px 20px 20px;
  border-radius: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin: 30px 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.subscribe-text {
  font-size: 32px;
  font-weight: bold;
  color: #9B3462;
  margin-bottom: 15px;
  line-height: 90%;
  letter-spacing: -1px;
  font-family: "True North Black", sans-serif;
}

.subscribe-form {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 10px;
  margin-right: 5%;
}

.input-wrapper {
  position: relative;
  width: 100%;
}

.input-icon {
  position: absolute;
  left: 18px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 20px;
  color: #9b3462;
  pointer-events: none;
}

.subscribe-input {
  padding: 20px 20px 20px 45px;
  border: none;
  border-radius: 50px;
  width: 100%;
  font-size: 14px;
  outline: none;
  color: #9b3462;
}

.subscribe-input:focus {
  border-color: #6b1e58;
}

.subscribe-btn {
  padding: 20px 30px;
  margin-left: 20px;
  background-color: #9B3462;
  color: white;
  font-weight: bold;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.subscribe-input::placeholder {
  color: #9B3462;
}

.subscribe-btn:hover {
  background-color: #4c123d;
}

/* ðŸ“± MOBILE FIX */
@media (max-width: 768px) {
  .subscribe-section {
    padding-left: 20px !important;
    padding-right: 20px !important;
  }

  .subscribe-footer {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .subscribe-text {
    width: 100% !important;
    max-width: 350px;
    text-align: center;
    margin: 10px 12px 20px 0px;
    font-size: 22px;
    line-height: 1.3;
  }

  .subscribe-form {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100% !important;
    margin: 0;
    padding-top: 0;
  }

  .input-wrapper {
    width: 100% !important;
    margin-bottom: 15px;
  }

  .subscribe-input {
    width: 100%;
    padding: 18px 18px 18px 45px;
    font-size: 14px;
  }

  .subscribe-btn {
    width: 100% !important;
    margin-left: 0;
    font-size: 14px;
  }
}
{% endstylesheet %}


